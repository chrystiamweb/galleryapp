<p id="notice"><%= notice %></p>

<h1>Galeries</h1>
<div class="row">
  <% @galeries.each do |galery| %>
    <div class="">
      <div class="col m3 s12">
        <div class="card">
          <div class="card-image">
            <%= image_tag   galery.cardthumb(galery.images.first)  %>
            <span class="card-title"><%= galery.title %></span>
            <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
          </div>
          <div class="card-content">
            <p><%= galery.body %></p>
            <%= link_to 'Show', galery %>
            <%= link_to 'Edit', edit_galery_path(galery) %>
            <%= link_to 'Destroy', galery, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    </div>
      
  <% end %>
</div>


<%= link_to 'New Galery', new_galery_path %>